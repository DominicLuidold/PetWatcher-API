{
    "name": "dominicluidold/petwatcher-api",
    "description": "PetWatcher-API provides functionality for end-user applications",
    "license": "MIT",
    "authors": [
        {
            "name": "Dominic Luidold",
            "email": "dominic.luidold@gmail.com"
        }
    ],
    "require": {
        "ext-json": "*",
        "illuminate/database": "^6.7",
        "monolog/monolog": "^2.0",
        "php-di/php-di": "^6.0",
        "respect/validation": "^1.1",
        "slim/psr7": "^0.6",
        "slim/slim": "^4.3",
        "vlucas/phpdotenv": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "PetWatcher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PetWatcher\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": [
            "@phpunit",
            "@phpcs"
        ],
        "phpunit": "vendor/bin/phpunit",
        "phpcs": "vendor/bin/phpcs"
    },
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
